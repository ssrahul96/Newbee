<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
    <servlet>
        <servlet-name>login</servlet-name>
        <servlet-class>Control.login</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>signup</servlet-name>
        <servlet-class>Control.signup</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>newpost</servlet-name>
        <servlet-class>Control.newpost</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>newfriend</servlet-name>
        <servlet-class>Control.newfriend</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>newfriendconfirm</servlet-name>
        <servlet-class>Control.newfriendconfirm</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/login.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>signup</servlet-name>
        <url-pattern>/signup.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>newpost</servlet-name>
        <url-pattern>/newpost.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>newfriend</servlet-name>
        <url-pattern>/newfriend.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>newfriendconfirm</servlet-name>
        <url-pattern>/newfriendconfirm.do</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
